# security
<FilesMatch "\.(html|php)$">
Header set Content-Security-Policy "default-src 'self'; style-src 'self'; script-src 'self' *.google-analytics.com *.cloudflare.com data:; connect-src 'self' *.google-analytics.com data:; img-src * data:; font-src 'self' data:; child-src 'self'"
Header set Strict-Transport-Security "max-age=63072000"
Header set X-Content-Type-Options nosniff
Header set X-Frame-Options SAMEORIGIN
Header set X-XSS-Protection "1; mode=block"
</FilesMatch>

RewriteEngine On

/* @if !devBuild */
# enforce HTTPS
RewriteCond %{SERVER_PORT} 80
RewriteRule ^(.*)$ https://www.optimalworks.net/$1 [L,R=301]

# enforce www
RewriteCond %{HTTP_HOST} !^www\.
RewriteRule ^(.*)$ https://www.%{HTTP_HOST}/$1 [L,R=301]

# remove index.html
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . redir.php [L]
/* @endif */
